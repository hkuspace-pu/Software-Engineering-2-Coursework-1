<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="406dp"
        android:layout_height="211dp"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="440dp">

        <FrameLayout
            android:layout_width="135dp"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/recBtn"
                    android:layout_width="92dp"
                    android:layout_height="89dp"
                    android:backgroundTint="@color/white"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/employee_record"
                    tools:layout_editor_absoluteX="36dp"
                    tools:layout_editor_absoluteY="545dp" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="127dp"
                    android:layout_height="52dp"
                    android:text="Employee's Record"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    tools:layout_editor_absoluteX="16dp"
                    tools:layout_editor_absoluteY="634dp" />
            </LinearLayout>
        </FrameLayout>

        <FrameLayout
            android:layout_width="135dp"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/leaveApprovalBtn"
                    android:layout_width="92dp"
                    android:layout_height="89dp"
                    android:backgroundTint="@color/white"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/calender"
                    tools:layout_editor_absoluteX="159dp"
                    tools:layout_editor_absoluteY="545dp" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="127dp"
                    android:layout_height="52dp"
                    android:layout_marginBottom="45dp"
                    android:text="Leave Approval"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/leaveApprovalBtn"
                    tools:layout_editor_absoluteX="142dp" />
            </LinearLayout>
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/newEmployeeBtn"
                    android:layout_width="92dp"
                    android:layout_height="89dp"
                    android:backgroundTint="@color/white"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/new_employee"
                    tools:layout_editor_absoluteX="285dp"
                    tools:layout_editor_absoluteY="545dp" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="127dp"
                    android:layout_height="52dp"
                    android:text="New Employee"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    tools:layout_editor_absoluteX="278dp"
                    tools:layout_editor_absoluteY="634dp" />
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>